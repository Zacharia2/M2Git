<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE" />

    <application
        android:name="ts.realms.m2git.MainDebugApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:logo="@drawable/ic_launcher"
        android:theme="@style/AppTheme"
        tools:replace="android:name">
        <activity
            android:name="ts.realms.m2git.ui.screens.main.RepoListActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="ts.realms.m2git.ui.screens.fragments.RepoDetailActivity"
            android:label="@string/title_activity_repo_detail"
            android:parentActivityName="ts.realms.m2git.ui.screens.main.RepoListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ts.realms.m2git.ui.screens.main.RepoListActivity" />
        </activity>
        <activity
            android:name="ts.realms.m2git.ui.screens.fragments.ViewFileActivity"
            android:configChanges="orientation|keyboardHidden"
            android:parentActivityName="ts.realms.m2git.ui.screens.fragments.RepoDetailActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ts.realms.m2git.ui.screens.fragments.RepoDetailActivity" />
        </activity>
        <activity
            android:name="ts.realms.m2git.ui.screens.fragments.BranchChooserActivity"
            android:configChanges="orientation|keyboardHidden"
            android:parentActivityName="ts.realms.m2git.ui.screens.fragments.RepoDetailActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ts.realms.m2git.ui.screens.fragments.RepoDetailActivity" />
        </activity>
        <activity
            android:name="ts.realms.m2git.ui.screens.fragments.CommitDiffActivity"
            android:parentActivityName="ts.realms.m2git.ui.screens.fragments.RepoDetailActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ts.realms.m2git.ui.screens.fragments.RepoDetailActivity" />
        </activity>
        <activity
            android:name="ts.realms.m2git.ui.screens.fragments.ImportRepositoryActivity"
            android:label="@string/title_activity_import_repository"
            android:parentActivityName="ts.realms.m2git.ui.screens.main.RepoListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ts.realms.m2git.ui.screens.main.RepoListActivity" />
        </activity>
        <activity
            android:name="ts.realms.m2git.ui.screens.fragments.PrivateKeyManageActivity"
            android:label="@string/title_activity_private_key_manage"
            android:parentActivityName="ts.realms.m2git.ui.screens.main.RepoListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ts.realms.m2git.ui.screens.main.RepoListActivity" />
        </activity>
        <activity
            android:name="ts.realms.m2git.ui.screens.fragments.ExploreFileActivity"
            android:label="@string/title_activity_explore_file"
            android:parentActivityName="ts.realms.m2git.ui.screens.fragments.PrivateKeyManageActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ts.realms.m2git.ui.screens.fragments.PrivateKeyManageActivity" />
        </activity>
        <activity
            android:name="ts.realms.m2git.ui.screens.settings.UserSettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="ts.realms.m2git.ui.screens.main.RepoListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ts.realms.m2git.ui.screens.main.RepoListActivity" />
        </activity>
        <activity
            android:name="ts.realms.m2git.ui.screens.fragments.ExploreRootDirActivity"
            android:label="@string/title_activity_explore_file"
            android:parentActivityName="ts.realms.m2git.ui.screens.settings.UserSettingsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ts.realms.m2git.ui.screens.settings.UserSettingsActivity" />
        </activity>

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            tools:replace="android:authorities"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/filepaths" />
        </provider>

    </application>

</manifest>
