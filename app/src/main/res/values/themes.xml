<resources>

    <attr name="pager_title_strip_background" format="reference" />
    <attr name="bt_branch_name_bg" format="reference" />
    <attr name="bt_branch_name_text_color" format="reference" />
    <attr name="mgit_drawer_text_color" format="reference" />
    <attr name="mgit_drawer_background" format="reference" />
    <attr name="ic_file_fl" format="reference" />
    <attr name="ic_folder_fl" format="reference" />
    <attr name="ic_branch_l" format="reference" />
    <attr name="ic_tag_l" format="reference" />


    <!-- Application theme. -->
    <style name="AppTheme" parent="Theme.Sgit">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- Application theme. -->
    <style name="DarkAppTheme" parent="Theme.SgitDark">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="items_with_same_width">
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_weight">1.0</item>
    </style>

    <style name="Theme.Sgit" parent="Theme.Material3.Light">
        <!--状态栏颜色-->
        <!--        <item name="android:windowLightStatusBar">false</item>-->
        <!--actionBar-->
        <!--        <item name="windowActionBar">false</item>-->
        <!--        <item name="windowNoTitle">true</item>-->
        <!--        <item name="colorSurface">#546E7A</item>-->
        <!--        <item name="colorPrimary">#546E7A</item>-->
        <!--        <item name="colorPrimaryDark">#546E7A</item>-->
        <!-- 设置 ActionBar 标题和按钮颜色为白色 -->
        <!--        <item name="colorControlNormal">@android:color/white</item>-->
        <!--        <item name="titleTextColor">@android:color/white</item>-->
        <!-- 以前的设置 -->
        <item name="android:actionBarItemBackground">@drawable/selectable_background_sgit</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Sgit</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Sgit</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Sgit</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Sgit</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Sgit</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_sgit</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_sgit</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Sgit</item>
        <!--        <item name="android:actionMenuTextColor">@android:color/black</item>-->
        <item name="android:textColor">@android:color/black</item>
        <item name="android:actionBarWidgetTheme">@style/Theme.Sgit.Widget</item>
        <item name="bt_branch_name_bg" type="color">@android:color/white</item>
        <item name="bt_branch_name_text_color" type="color">@color/branch_name_bg</item>
        <item name="pager_title_strip_background" type="color">@color/branch_name_bg</item>
        <item name="mgit_drawer_text_color" type="color">@android:color/background_dark</item>
        <item name="mgit_drawer_background" type="color">@android:color/background_light</item>
        <item name="ic_file_fl" type="drawable">@drawable/ic_file_d</item>
        <item name="ic_folder_fl" type="drawable">@drawable/ic_folder_d</item>
        <item name="ic_branch_l" type="drawable">@drawable/ic_branch_d</item>
        <item name="ic_tag_l" type="drawable">@drawable/ic_tag_d</item>

        <!-- this strangely fixes the "flash" of the default light theme on app startup when the
          dark theme is selected, from: http://stackoverflow.com/a/29202453/85472 -->
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="Theme.SgitDark" parent="Theme.AppCompat">
        <!--actionbar-->
        <!--        <item name="windowActionBar">false</item>-->
        <!--        <item name="windowNoTitle">true</item>-->
        <!--        <item name="colorSurface">@android:color/background_dark</item>-->
        <!--        <item name="colorPrimary">#474747</item>-->
        <!--        <item name="colorPrimaryDark">@android:color/background_dark</item>-->
        <!--        <item name="colorOnPrimary">@android:color/white</item>-->
        <!-- 以前的设置 -->
        <item name="android:actionMenuTextColor">@android:color/white</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="bt_branch_name_bg" type="color">@android:color/black</item>
        <item name="bt_branch_name_text_color" type="color">@android:color/white</item>
        <item name="pager_title_strip_background" type="color">@color/branch_name_bg_dark</item>
        <item name="mgit_drawer_text_color" type="color">@android:color/white</item>
        <item name="mgit_drawer_background" type="color">@android:color/background_dark</item>
        <!-- ic -->
        <item name="ic_file_fl" type="drawable">@drawable/ic_file</item>
        <item name="ic_folder_fl" type="drawable">@drawable/ic_folder_w</item>
        <item name="ic_branch_l" type="drawable">@drawable/ic_branch_w</item>
        <item name="ic_tag_l" type="drawable">@drawable/ic_tag_w</item>
    </style>

    <style name="ActionBar.Solid.Sgit" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/ab_background_textured_sgit</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_sgit</item>
        <item name="android:backgroundSplit">@drawable/ab_background_textured_sgit</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Sgit</item>
    </style>

    <style name="ActionBar.Transparent.Sgit" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@drawable/ab_transparent_sgit</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Sgit</item>
    </style>

    <style name="PopupMenu.Sgit" parent="@android:style/Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_sgit</item>
    </style>

    <style name="DropDownListView.Sgit" parent="@android:style/Widget.Holo.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_sgit</item>
    </style>

    <style name="ActionBarTabStyle.Sgit" parent="@android:style/Widget.Holo.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_sgit</item>
    </style>

    <style name="DropDownNav.Sgit" parent="@android:style/Widget.Holo.Light.Spinner">
        <item name="android:background">@drawable/spinner_background_ab_sgit</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_sgit</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_sgit</item>
    </style>

    <style name="ProgressBar.Sgit" parent="@android:style/Widget.Holo.Light.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_sgit</item>
    </style>

    <style name="ActionButton.CloseMode.Sgit" parent="@android:style/Widget.Holo.Light.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_sgit</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Sgit.Widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/PopupMenu.Sgit</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Sgit</item>
    </style>
</resources>
